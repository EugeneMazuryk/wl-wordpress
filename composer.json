{
  "name": "weblorem/wl-wp-project",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with Composer, easier configuration, and an improved folder structure",
  "homepage": "https://weblorem.com/",
  "authors": [
    {
      "name": "Eugene Mazuryk",
      "email": "mazuryk.e@weblorem.com",
      "homepage": "https://mazuryk-e.weblorem.com/"
    }
  ],
  "keywords": ["bedrock", "composer", "roots", "wordpress", "wp", "wp-config"],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "6.1.6",
        "type": "wordpress-muplugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k=b3JkZXJfaWQ9NjQyNzF8dHlwZT1kZXZlbG9wZXJ8ZGF0ZT0yMDE1LTA5LTE3IDExOjM3OjEw&t=6.1.6"
        }
      }
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.1",
    "vlucas/phpdotenv": "^5.4",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "^6.0",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "advanced-custom-fields/advanced-custom-fields-pro": "^6.1.6",
    "wpackagist-plugin/easy-svg":"*",
    "wpackagist-plugin/cyr3lat":"*",
    "wpackagist-plugin/regenerate-thumbnails":"*",
    "wpackagist-plugin/bcm-duplicate-menu":"*",
    "wpackagist-plugin/change-wp-admin-login":"*",
    "wpackagist-plugin/simple-custom-post-order":"*"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^0.14.0",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin",
        "advanced-custom-fields/advanced-custom-fields-pro",
        "wpackagist-plugin/easy-svg",
        "wpackagist-plugin/change-wp-admin-login",
        "wpackagist-plugin/regenerate-thumbnails",
        "wpackagist-plugin/cyr3lat",
        "wpackagist-plugin/bcm-duplicate-menu",
        "wpackagist-plugin/simple-custom-post-order",
        "wpackagist-plugin/webp-express",
        "wpackagist-plugin/wp-optimize"
      ],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-install-cmd": [
      "php -r \"copy('.env.example', '.env');\"",
      "composer run remove-old-wp-themes"
    ],
    "remove-old-wp-themes": [
      "rm -rf web/wp/wp-content/themes/twenty*"
    ],
    "test": [
      "phpcs"
    ]
  }
}
